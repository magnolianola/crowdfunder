<%= form_for(@project) do |f| %>
	<% if @project.errors.any? %>
		<div id="error explanation">
			<h2><%= pluralize(@project.errors.count, "error") %> prohibited this product from being saved:
			</h2>

			<ul>
				<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :total_cost %><br />
		<%= f.number_field(:total_cost, {:min => 1}) %><br />
	</div>
	<div class="field">
		<%= f.label :deadline %><br />
		<%= f.date_field :deadline %><br />
	</div>
	<div class ="field">
		<%= f.label :tag_list, "Tags (separated by commas)" %><br/>
		<%= f.text_field :tag_list %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

